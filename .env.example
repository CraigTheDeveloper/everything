# Database Configuration
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/everything?schema=public"

# Photo Storage Directory (change to your preferred location)
PHOTO_STORAGE_DIR="./uploads/photos"

# Application Settings
NODE_ENV=development
NEXT_PUBLIC_APP_NAME="Everything"

# Authentication (Google OAuth)
# Generate AUTH_SECRET with: openssl rand -base64 32
AUTH_SECRET=""
AUTH_GOOGLE_ID=""
AUTH_GOOGLE_SECRET=""
AUTH_ALLOWED_EMAIL=""

# NextAuth URL must match where your app is accessed from
# If you change this, also update the redirect URI in Google Cloud Console:
# Redirect URI format: {NEXTAUTH_URL}/api/auth/callback/google
NEXTAUTH_URL="http://localhost:3000"
